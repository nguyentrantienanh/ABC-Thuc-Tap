{
  "name": "turborepo-template",
  "private": true,
  "scripts": {
    "build": "dotenv -e .env.production turbo build",
    "dev": "dotenv -e .env.local turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:cov": "turbo test:cov",
    "format": "turbo format",
    "check:format": "turbo check:format",
    "check:types": "turbo check:types",
    "clean": "rimraf {apps,packages}/**/{node_modules,dist,.next,.turbo} -g && rimraf node_modules",
    "api": "turbo dev --filter=api",
    "admin-portal": "turbo dev --filter=admin-portal",
    "website": "turbo dev --filter=website",
    "mobile-app:ios": "yarn workspace mobile-app ios",
    "mobile-app:android": "yarn workspace mobile-app android",
    "setup": "turbo setup",
    "prepare": "turbo prepare",
    "postinstall": "manypkg check"
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.4",
    "@repo/config-prettier": "*",
    "@repo/config-typescript": "*",
    "@repo/eslint-config": "*",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.0.11",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.3.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@1.22.22"
}
