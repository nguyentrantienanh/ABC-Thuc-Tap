{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ViteJs",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "exclude": ["node_modules"]
}
